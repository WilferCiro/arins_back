{
  "version": "0.2.0",
  "configurations": [
      {
        "type": "node",
            "request": "launch",
            "name": "Launch NestJS",
            "args": [
                "start",
                "--watch"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start:dev"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
      }
  ]
}